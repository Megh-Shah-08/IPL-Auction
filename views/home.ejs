<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IPL MOCK AUCTION!</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      h1 {
        text-align: center;
        margin: 20px 0;
        color: #333;
      }

      form button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      form button:hover {
        background-color: #0056b3;
      }

      #container {
        display: grid;
        grid-template-columns: repeat(
          auto-fit,
          minmax(300px, 1fr)
        ); /* Adjust cards per row */
        gap: 20px; /* Space between cards */
        width: 90%; /* Take up most of the screen width */
        max-width: 1200px; /* Restrict maximum width for readability */
        margin: 20px auto;
        justify-content: space-between; /* Spread cards across rows */
      }

      .card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
      }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }

      .card h2 {
        font-size: 24px;
        margin-bottom: 15px;
        color: #007bff;
      }

      .card ul {
        list-style: none;
        padding: 0;
      }

      .card ul li {
        margin: 10px 0;
        font-size: 16px;
        color: #555;
      }

      .card ul li a {
        color: white;
        text-decoration: none;
        font-weight: bold;
      }

      .card ul li a:hover {
        text-decoration: underline;
      }

      a {
        display: inline-block;
        background-color: #007bff; /* Blue background */
        color: white; /* White text */
        text-decoration: none; /* Remove underline */
        padding: 10px 20px; /* Add padding for better spacing */
        border-radius: 5px; /* Rounded corners */
        font-size: 16px; /* Adjust font size */
        font-weight: bold; /* Bold text */
        transition: background-color 0.3s, transform 0.2s; /* Smooth hover effect */
      }

      a:hover {
        background-color: #0056b3; /* Darker blue on hover */
        transform: translateY(-3px); /* Slight upward movement on hover */
        text-decoration: underline; /* Optional: Add underline on hover */
      }

      .card ul li:first-child {
        font-size: 18px; /* Slightly larger text */
        font-weight: bold; /* Bold text for emphasis */
        color: #333; /* Darker text color for better visibility */
        text-decoration: none; /* Ensure no underline */
      }

      .card ul li:first-child span {
        color: #007bff; /* Blue color for the purse value */
        font-weight: bold; /* Bold for emphasis */
      }
      /* Responsive Design */
      @media (max-width: 768px) {
        h1 {
          font-size: 20px;
        }

        .card h2 {
          font-size: 20px;
        }

        #container {
          grid-template-columns: 1fr; /* Stack cards in a single column */
        }
      }
    </style>
  </head>
  <body>
    <h1>IPL MOCK AUCTION 2025!</h1>

    <form action="/login" method="get" style="margin-bottom: 20px">
      <button>Login</button>
    </form>

    <% if (userType === "admin") { %>
    <a href="/player" style="margin-bottom: 20px" id="">New Player</a>
    <% } %>

    <div id="container">
      <% for (let team of teams) { %>
      <div class="card">
        <h2><%= team.name %></h2>
        <ul>
          <li>Current Purse: <%= team.purse %> CR</li>
          <li><a href="/team/<%= team._id %>">Details</a></li>
        </ul>
      </div>
      <% } %>
    </div>
  </body>
</html>
